<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jordan.divvyupv12.FilesActivity"
    android:background="@color/background_material_dark">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save File"
        android:textAllCaps="false"
        android:id="@+id/save_file"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00b12b"
        android:textColor="#ffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/create_file"
        android:layout_toStartOf="@+id/save_file"
        android:layout_above="@+id/save_file"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileContentsBox"
        android:layout_below="@+id/create_file"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/listView"
        android:editable="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:autoText="false"
        android:layout_above="@+id/save_file"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create File"
        android:id="@+id/create_file"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/fileContentsBox"
        android:background="#00b12b"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User to File"
        android:id="@+id/add_user_to_file"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/fileContentsBox"
        android:onClick="goToFiles"
        android:layout_toEndOf="@+id/save_file"
        android:background="#00b12b"
        android:textColor="#ffffff" />

</RelativeLayout>
