<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jordan.divvyupv12.FilesActivity"
    android:background="@color/background_material_dark">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save File"
        android:textAllCaps="false"
        android:id="@+id/save_file"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/delete_file" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:divider="#242b24"
        android:dividerHeight="4dp"
        android:layout_above="@+id/create_file"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/save_file"
        android:layout_marginBottom="9dp"
        android:layout_alignEnd="@+id/create_file" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileContentsBox"
        android:editable="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:autoText="false"
        android:textColor="#ffffff"
        android:background="#242b24"
        android:layout_above="@+id/save_file"
        android:layout_alignEnd="@+id/share_file_button"
        android:layout_below="@+id/share_file_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New File"
        android:id="@+id/create_file"
        android:textAllCaps="false"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="17dp"
        android:layout_alignTop="@+id/save_file"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete File"
        android:textAllCaps="false"
        android:id="@+id/delete_file"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_alignTop="@+id/save_file"
        android:textSize="17dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share File"
        android:textAllCaps="false"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:id="@+id/share_file_button"
        android:textSize="17dp"
        android:layout_alignStart="@+id/save_file"
        android:layout_alignEnd="@+id/delete_file"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false" />

</RelativeLayout>
