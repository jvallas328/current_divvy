<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jordan.divvyupv12.GroupsActivity"
    android:background="@color/background_material_dark">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Group"
        android:textAllCaps="false"
        android:id="@+id/manage_group_button"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_alignTop="@+id/create_group_button"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_list"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_above="@+id/create_group_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_info"
        android:editable="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:autoText="false"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/group_list"
        android:layout_below="@+id/button4"
        android:layout_above="@+id/delete_group_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:id="@+id/create_group_button"
        android:textAllCaps="false"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User to File"
        android:id="@+id/button4"
        android:textAllCaps="false"
        android:onClick="goToFiles"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:layout_above="@+id/group_list"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Group"
        android:textAllCaps="false"
        android:id="@+id/delete_group_button"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="11dp"
        android:layout_alignTop="@+id/manage_group_button"
        android:layout_alignEnd="@+id/group_info" />
</RelativeLayout>
