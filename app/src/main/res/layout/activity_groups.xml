<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jordan.divvyupv12.GroupsActivity"
    android:background="@color/background_material_dark">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Group"
        android:textAllCaps="false"
        android:id="@+id/manage_group_button"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_list"
        android:divider="#242b24"
        android:dividerHeight="4dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_above="@+id/create_group_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:id="@+id/create_group_button"
        android:textAllCaps="false"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User to File"
        android:id="@+id/button4"
        android:textAllCaps="false"
        android:onClick="goToFiles"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:layout_above="@+id/group_list"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Group"
        android:textAllCaps="false"
        android:id="@+id/delete_group_button"
        android:background="#00b12b"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/group_files_list" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/members_label"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/group_list"
        android:text="Members:"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:inputType="none"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_files_label"
        android:inputType="none"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/group_list"
        android:text="Shared Files:"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/members_list"
        android:divider="#242b24"
        android:dividerHeight="4dp"
        android:layout_toEndOf="@+id/group_list"
        android:layout_above="@+id/group_files_label"
        android:layout_below="@+id/members_label" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_files_list"
        android:divider="#242b24"
        android:dividerHeight="4dp"
        android:layout_toEndOf="@+id/group_list"
        android:layout_above="@+id/manage_group_button"
        android:layout_below="@+id/group_files_label" />
</RelativeLayout>
